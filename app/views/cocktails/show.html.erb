<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p>
      <%= dose.description %>
      <%= dose.ingredient.name %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash destroy_dose"></i>
          <% end %>
    </p>
  <% end  %>

  <h3>Add dose</h3>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, as: :radio_buttons %>
    <%= f.submit class: "btn btn-primary my-2" %>
  <% end %>

  <%= link_to "Back to list", cocktails_path, class: "btn btn-primary my-2" %>
</div>




